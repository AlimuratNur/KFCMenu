<UserControl
    x:Class="KFCMenu.View.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fawesome="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:KFCMenu.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mv="clr-namespace:KFCMenu.ViewModel"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">



    <UserControl.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/ChangePageButton.xaml" />
                <ResourceDictionary Source="../../Resources/Styles/KfcButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="DataGridCell">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />

                <Setter Property="Background" Value="AliceBlue" />

            </Style>





            <Style x:Key="kfcButton1" TargetType="Button">
                <Setter Property="Background" Value="White" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="DarkRed" />
                        <Setter Property="BorderBrush" Value="Red" />
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>


    </UserControl.Resources>






    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>



        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="14,15"
            Style="{StaticResource KfcButton}">

            <TextBlock
                Margin="10"
                FontFamily="{StaticResource KFC Font}"
                FontSize="20"
                Text="KFC" />
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>







        <StackPanel Grid.Row="1" Grid.Column="0">

            <Button
                Name="Combos"
                Command="{Binding ChangePage}"
                CommandParameter="{Binding Combos}"
                Content="{Binding Combos.Title}"
                Style="{StaticResource ChangeFoodPage}" />
            <Button
                Name="Burgers"
                Command="{Binding ChangePage}"
                CommandParameter="{Binding Burgers}"
                Content="{Binding Burgers.Title}"
                Style="{StaticResource ChangeFoodPage}" />
            <Button
                Name="Chickens"
                Command="{Binding ChangePage}"
                CommandParameter="{Binding Chickens}"
                Content="{Binding Chickens.Title}"
                Style="{StaticResource ChangeFoodPage}" />

            <Button
                Name="Drinks"
                Command="{Binding ChangePage}"
                CommandParameter="{Binding Drinks}"
                Content="{Binding Drinks.Title}"
                Style="{StaticResource ChangeFoodPage}" />
        </StackPanel>

        <Button
            Grid.Row="0"
            Grid.Column="1"
            MinWidth="55"
            Margin="580,20,25,20"
            Background="AliceBlue"
            BorderBrush="White"
            Command="{Binding NavigateToCartViewModel}">
            <fawesome:ImageAwesome Margin="10" Icon="Solid_ShoppingCart" />
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>

        </Button>


        <ListView
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            BorderBrush="AliceBlue"
            ItemsSource="{Binding SelectedFoodType.Diches}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid HorizontalAlignment="Stretch" Columns="3" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="200"
                        MaxWidth="200"
                        MaxHeight="200"
                        Margin="6"
                        Padding="8"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource KFC Font}"
                                FontWeight="Bold"
                                Text="{Binding Title}" />
                            <TextBlock
                                FontFamily="{StaticResource KFC Font}"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Price, StringFormat='₸{0}'}" />
                            <Button
                                Margin="20,5"
                                Padding="23,4"
                                Background="AliceBlue"
                                BorderBrush="DarkGray"
                                Command="{Binding DataContext.AddDishToCart, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Content="Добавить">

                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </Button.Resources>

                            </Button>
                        </StackPanel>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <TextBlock
            Grid.Column="1"
            Margin="5,17,550,17"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource KFC Font}"
            FontSize="23"
            Text="{Binding FoodInCartCount}" />
    </Grid>
</UserControl>
