<UserControl
    x:Class="KFCMenu.View.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fawesome="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:KFCMenu.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mv="clr-namespace:KFCMenu.ViewModel"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <Setter Property="Background" Value="AliceBlue" />

        </Style>


        <Style x:Key="FoodTypeButton" TargetType="Button">
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="FontFamily" Value="{StaticResource KFC Font}" />
            <Setter Property="Command" Value="{Binding ChangePage}" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>


        <Style x:Key="AddToCartButton" TargetType="Button">
            <Setter Property="Command" Value="{Binding AddDishToCart}" />
        </Style>
    </UserControl.Resources>






    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>



        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="14,15"
            Background="AliceBlue"
            BorderBrush="Red">

            <TextBlock
                Margin="10"
                FontFamily="{StaticResource KFC Font}"
                FontSize="20"
                Text="KFC" />
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>


        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="600,20,25,20"
            Background="AliceBlue"
            BorderBrush="White"
            Command="{Binding NavigateToCartViewModel}">
            <fawesome:ImageAwesome Margin="10" Icon="Solid_ShoppingCart" />
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>

        </Button>





        <StackPanel Grid.Row="1" Grid.Column="0">

            <Button
                Name="Combos"
                CommandParameter="{Binding Combos}"
                Content="{Binding Combos.Title}"
                Style="{StaticResource FoodTypeButton}" />
            <Button
                Name="Burgers"
                CommandParameter="{Binding Burgers}"
                Content="{Binding Burgers.Title}"
                Style="{StaticResource FoodTypeButton}" />
            <Button
                Name="Chickens"
                CommandParameter="{Binding Chickens}"
                Content="{Binding Chickens.Title}"
                Style="{StaticResource FoodTypeButton}" />

            <Button
                Name="Drinks"
                CommandParameter="{Binding Drinks}"
                Content="{Binding Drinks.Title}"
                Style="{StaticResource FoodTypeButton}" />
        </StackPanel>


        <ListView
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            BorderBrush="AliceBlue"
            ItemsSource="{Binding SelectedFoodType.Diches}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid HorizontalAlignment="Stretch" Columns="2" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="200"
                        MaxHeight="300"
                        Margin="6"
                        Padding="8"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource KFC Font}"
                                FontWeight="Bold"
                                Text="{Binding Title}" />
                            <TextBlock
                                FontFamily="{StaticResource KFC Font}"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Price, StringFormat='₸{0}'}" />
                            <Button
                                Margin="20,5"
                                Padding="23,4"
                                Background="AliceBlue"
                                BorderBrush="DarkGray"
                                Command="{Binding DataContext.AddDishToCart, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Content="Добавить">

                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </Button.Resources>

                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <TextBlock
            Grid.Column="1"
            Margin="5,17,550,17"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource KFC Font}"
            FontSize="23"
            Text="{Binding FoodInCartCount}" />
    </Grid>
</UserControl>
