<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dish="clr-namespace:KFCMenu.Models">

    <Style x:Name="AddButton" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="20,5" />
        <Setter Property="Padding" Value="23,5" />
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="Content" Value="Add" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="DarkGray" CornerRadius="10" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>
    <Style x:Name="asf" TargetType="{x:Type ListViewItem}">
        <Setter Property="Background" Value="Wheat" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border
                        Width="200"
                        MaxWidth="200"
                        MaxHeight="200"
                        Margin="6"
                        Padding="8"
                        Background="White"
                        BorderBrush="LightGray"
                        CornerRadius="10" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>