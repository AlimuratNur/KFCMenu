<UserControl
    x:Class="KFCMenu.View.CartContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KFCMenu.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvm="clr-namespace:KFCMenu.ViewModel"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White" />


            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                    <Setter Property="BorderBrush" Value="White" />
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">


        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Width="55"
            Height="60"
            Margin="700,20,25,20"
            Command="{Binding OnMenuPage}"
            Content="Exit" />

        <TextBlock
            Grid.Row="0"
            Margin="14,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{StaticResource KFC Font}"
            FontSize="25"
            Text="Cart" />

        <ListBox Grid.Row="1" ItemsSource="{Binding Dishes.CartItems}">

            <!--ListBox.ItemTemplate>
                <DataTemplate />
            </ListBox.ItemTemplate-->

        </ListBox>


    </Grid>
</UserControl>
